    <feature>pentaho-big-data-kettle-plugins</feature>
    <feature>pentaho-big-data-plugin-shim-impl</feature>
  </feature>

  <feature name="shim-common-fragment-V1" version="1.0">
    <bundle>mvn:org.pentaho/pentaho-hadoop-shims-common-dependencies-V1/9.0.0.0-SNAPSHOT</bundle>
    <bundle>mvn:org.pentaho/pentaho-hadoop-shims-common-fragment-V1/9.0.0.0-SNAPSHOT</bundle>
  </feature>
  <feature name="pentaho-hadoop-shims-hdp26" version="1.0">
    <feature>shim-common-fragment-V1</feature>
    <bundle>mvn:org.pentaho/pentaho-hadoop-shims-hdp26-driver/9.0.0.0-SNAPSHOT</bundle>
  </feature>
  <feature name="pentaho-hadoop-shims-cdh61" version="1.0">
    <feature>shim-common-fragment-V1</feature>
    <bundle>mvn:org.pentaho/pentaho-hadoop-shims-cdh61-driver/9.0.0.0-SNAPSHOT</bundle>
  </feature>
