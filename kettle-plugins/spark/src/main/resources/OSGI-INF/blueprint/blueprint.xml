<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:pen="http://www.pentaho.com/xml/schemas/pentaho-blueprint"
           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
            http://www.pentaho.com/xml/schemas/pentaho-blueprint http://www.pentaho.com/xml/schemas/pentaho-blueprint.xsd">

  <bean id="jobEntrySparkSubmit" class="org.pentaho.di.job.entries.spark.JobEntrySparkSubmit" scope="prototype">
    <pen:di-plugin type="org.pentaho.di.core.plugins.JobEntryPluginType"/>
  </bean>

  <bean id="JobEntrySparkSubmitAnalyzer" class="org.pentaho.di.job.entries.spark.JobEntrySparkSubmitAnalyzer"/>
  <service id="jobEntrySparkSubmitAnalyzerService"
           interface="org.pentaho.metaverse.api.analyzer.kettle.jobentry.IJobEntryAnalyzer"
           ref="JobEntrySparkSubmitAnalyzer"/>

</blueprint>
