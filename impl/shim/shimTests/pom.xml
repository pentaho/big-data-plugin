      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${dependency.maven-bundle-plugin.version}</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Import-Package>
              org.pentaho.hadoop.shim.api.cluster,org.pentaho.bigdata.api.hdfs.*,
              org.pentaho.hadoop.shim.api.hdfs.*,
              !org.apache.hadoop.*,!org.pentaho.di.core.hadoop.*,
              !org.pentaho.hadoop.*,!org.pentaho.yarn.*,*
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
